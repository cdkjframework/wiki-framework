<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.cdkjframework</groupId>
    <artifactId>cdkj-framework</artifactId>
    <packaging>pom</packaging>
    <version>1.0-200710</version>
    <modules>
        <module>cdkj-cloud</module>
        <module>cdkj-util</module>
        <module>cdkj-core</module>
        <module>cdkj-datasource</module>
        <module>cdkj-message</module>
        <module>cdkj-pay</module>
        <module>cdkj-pom</module>
        <module>cdkj-entity</module>
        <module>cdkj-constant</module>
        <module>cdkj-web</module>
        <module>cdkj-center</module>
        <module>cdkj-redis</module>
        <module>cdkj-datasource-jpa</module>
        <module>cdkj-datasource-mongodb</module>
        <module>cdkj-datasource-elasticsearch</module>
        <module>cdkj-log</module>
        <module>cdkj-security</module>
        <module>cdkj-web-socket</module>
        <module>cdkj-datasource-rw</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.5.RELEASE</version>
    </parent>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.cdkjframework</groupId>
                <artifactId>cdkj-pom</artifactId>
                <version>1.0-200710</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <id>lesmarthome Maven Respository</id>
            <name>lesmarthome Maven Respository</name>
            <url>http://192.168.1.94:8081/nexus/content/repositories/thirdparty/</url>
        </repository>

        <repository>
            <!-- Maven 自带的中央仓库使用的Id为central 如果其他的仓库声明也是用该Id
            就会覆盖中央仓库的配置 -->
            <id>mvnRepository</id>
            <name>mvnRepository</name>
            <url>http://192.168.1.94:8081/nexus/content/repositories/central/</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>lesmarthome Maven Respository</id>
            <layout>default</layout>
            <url>http://192.168.1.94:8081/nexus/content/repositories/thirdparty/</url>
        </repository>
    </distributionManagement>
</project>
